<section>
  {% for post in collections.posts | reverse %}
    <div class="post-preview">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <p><em>{{ post.date | date("MMMM d, yyyy") }}</em></p>
      <p>{{ post.templateContent | striptags | truncate(150, true, "...") }}</p>
    </div>
  {% endfor %}
</section>
